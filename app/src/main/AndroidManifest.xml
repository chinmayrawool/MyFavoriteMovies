<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mad.myfavoritemovies">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddMovieActivity"
            android:label="Add Movie">
        </activity>

        <activity android:name=".EditMovieActivity"
            android:label="Edit Movie">
        </activity>

        <activity android:name=".MovieByYearActivity"
            android:label="Movie By Year">
            <intent-filter>
                <action android:name="com.mad.myfavoritemovies.intent.action.VIEW1"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".MovieByRatingActivity"
            android:label="Movie By Rating">
            <intent-filter>
                <action android:name="com.mad.myfavoritemovies.intent.action.VIEW2"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>

</manifest>